@model IEnumerable<EComercial.Models.Categoria>

@{
    ViewBag.Title = "E-Comercial";
}

<div class="row" >
    <div class="col-md-4" >
        <ul class="nav nav-pills nav-stacked" style="max-width: 250px;">

            @foreach (var item in Model)
            {
                <li class="active">
                    @Html.ActionLink(item.Nombre, "SubCategoriasVistas", new { id = item.CategoriaId })
                    @*<a href="/Home/SubCategoriasVistas?id=@item.CategoriaId">@Html.DisplayFor(modelItem => item.Nombre)</a>*@
                </li>
            }
        </ul>
    </div>


    <div class="col-md-8">
        @{IList<EComercial.Models.Producto> products = ViewBag.Products;}

        @foreach (var product in products)
        {
            <div class="col-md-3">
                <img src="~/Images/e.png" width="80" height="80" />
                <div>Descripcion:@Html.DisplayFor(modelItem => product.Nombre) </div>
                <div>    Precio:@Html.DisplayFor(modelItem => product.PrecioVenta)</div>
                <div>
                    <a href="@Url.Content("~/Producto/Details/")@product.ProductoId"> Ver Producto</a> ||
                    <a href="@Url.Content("~/Carro/Add/")@product.ProductoId">Agregar</a>

                </div>
            </div>
        }
    </div>


   
<br/>
<br />
<br />
<br />
<br />
<br /><br />
<br />
<br />
<div id="myCarousel" class="carousel slide">
    <!-- Carousel indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Carousel items -->
    <div class="carousel-inner">
        <div class="item active">
            
            <img src="~/Images/vea.png" class="center-block"  width="200" height="200" alt="First slide">
            <br />
            <br />
            <div class="carousel-caption"></div>
        </div>
        <div class="item">
            <img src="~/Images/WalMart.png" class="center-block" width="200" height="200" alt="Second slide">
            <br />
            <br />
            <div class="carousel-caption"></div>
        </div>
        <div class="item">
            <img src="~/Images/changomas.png" class="center-block" width="200" height="200" alt="Second slide">
            <br />
            <br />
            <div class="carousel-caption"></div>
        </div>
    </div>
    <!-- Carousel nav -->
    <br/>
    <a class="carousel-control left" href="#myCarousel"
       data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel"
       data-slide="next">&rsaquo;</a>
</div> 
<script type="text/javascript">

    $(document).ready(function () {
        $('#myCarousel').carousel({
            interval: 20
        })
    });
    </script>