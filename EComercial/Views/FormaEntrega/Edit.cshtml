@model EComercial.Models.FormaEntrega

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>FormaEntrega</legend>

        @Html.HiddenFor(model => model.FormaEntregaId)

        <div class="editor-label">
            @Html.LabelFor(model => model.TipoEntregaId, "TipoEntrega")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TipoEntregaId", String.Empty)
            @Html.ValidationMessageFor(model => model.TipoEntregaId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Costo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Costo)
            @Html.ValidationMessageFor(model => model.Costo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PedidoId, "Pedido")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PedidoId", String.Empty)
            @Html.ValidationMessageFor(model => model.PedidoId)
        </div>

        <p>
            <input type="submit" class="btn-primary" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
