@model IEnumerable<EComercial.Models.Producto>

@{
    ViewBag.Title = "Listado Productos";
}

<br/>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Productos</h2>
    </div>
    <div class="panel-body">
        <div class="col-md-9">
            @foreach (var item in Model)
            {

                <div class="col-md-3">
                    <img src="data:image;base64,@System.Convert.ToBase64String(item.Imagen)" width="80" height="80" />   
                    <div>Descripcion:@Html.DisplayFor(modelItem => item.Nombre) </div>
                    <div>    Precio:@Html.DisplayFor(modelItem => item.PrecioVenta)</div>
                    <a href="@Url.Content("~/Producto/Details/")@item.ProductoId"> Ver Producto</a>
                </div>


            }
        </div>
    </div>
</div>



