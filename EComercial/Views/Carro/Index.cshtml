@model IEnumerable<EComercial.Models.Producto>

@{
    ViewBag.Title = "Productos";
}

<h2>Listado de Productos</h2>
<br />
        
        @foreach (var item in Model)
        {                        
            <div class="col-md-4">
                <img src="~/Images/heroAccent.png" />
                Descripcion:@Html.DisplayFor(modelItem => item.Nombre)                
                <img src="data:image;base64,@System.Convert.ToBase64String(item.Imagen)" width="80" height="80" />   
                Precio:@Html.DisplayFor(modelItem => item.PrecioVenta)
                <div > @Html.ActionLink("Agregar", "Add", new { id = item.ProductoId })>  </div>
                
            </div>
            
        }
        